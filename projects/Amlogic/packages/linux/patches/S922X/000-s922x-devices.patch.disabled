+					<3574170 0>;
+	};
+
+	chosen {
+		stdout-path = "serial0:115200n8";
+	};
+
+	codec_clk: codec-clk {
+		compatible = "fixed-clock";
+		clock-frequency = <12288000>;
+		clock-output-names = "codec_clk";
+		#clock-cells = <0>;
+	};
+
+	gpio_keys: volume-keys {
+		compatible = "gpio-keys-polled";
+		poll-interval = <5>;
+		autorepeat;
