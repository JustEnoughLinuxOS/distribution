+                sw4 {
+                        gpios = <&gpio GPIOX_3 GPIO_ACTIVE_LOW>;
+                        label = "GPIO DPAD-RIGHT";
+                        linux,code = <BTN_DPAD_RIGHT>; // 0x223
+                };
+                sw5 {
+                        gpios = <&gpio GPIOX_4 GPIO_ACTIVE_LOW>;
+                        label = "GPIO BTN-A";
+                        linux,code = <BTN_EAST>; // 0x131
+                };
+                sw6 {
