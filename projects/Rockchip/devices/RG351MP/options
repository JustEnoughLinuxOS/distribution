  AVAHI_DAEMON="no"

  # build with UPnP support (yes / no)
  KODI_UPNP_SUPPORT="no"

  # build with MySQL support (mysql / mariadb / none)
  KODI_MYSQL_SUPPORT="none"

  # build xbmc with optical drive support (yes / no)
