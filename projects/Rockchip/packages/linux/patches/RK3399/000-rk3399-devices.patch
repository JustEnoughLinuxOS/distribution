+	.clock		= ((1152 + 64 + 4 + 32) * (1920 + 56 + 3 + 6) * 60) / 1000,
+	.hdisplay	= 1152,
+	.hsync_start	= 1152 + 64,
+	.hsync_end	= 1152 + 64 + 4,
+	.htotal		= 1152 + 64 + 4 + 32,
+	.vdisplay	= 1920,
+	.vsync_start	= 1920 + 56,
+	.vsync_end	= 1920 + 56 + 3,
+	.vtotal		= 1920 + 56 + 3 + 6,
