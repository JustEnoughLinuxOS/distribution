+		        gpios = <&gpio3 RK_PB0 GPIO_ACTIVE_LOW>;
+		        label = "GPIO BTN_START";
+		        linux,code = <BTN_START>;
+		};
+		sw11 {
+		        gpios = <&gpio3 RK_PC0 GPIO_ACTIVE_LOW>;
+		        label = "GPIO BTN_F";
+		        linux,code = <BTN_MODE>;
+		};
+		sw12 {
+		        gpios = <&gpio3 RK_PD0 GPIO_ACTIVE_LOW>;
