-          -s '//systemList/system' -t elem -n 'theme' -v "${SYSTEM_THEME}" \
-          -s '//systemList/system' -t elem -n "emulators" -v "" ${TMPCACHE}/${SYSTEM_NAME}.tmp 2>&1 >/dev/null
-
-  if [ -e "${TMPCACHE}/${SYSTEM_NAME}-emulators.tmp" ]
-  then
-    while read -r line
