# Minimal OS variable loading for performance
. /etc/profile.d/001-functions

(
  if [ "$(get_setting wireguard.up)" == "1" ]
  then
    tocon "Enabling wireguard..."
    nohup wg-quick up /storage/.config/wireguard/wg0.conf &
  fi
) &
