. /etc/profile

if [ ! -d "/storage/.config/modprobe.d/" ]
then
  mkdir -p /storage/.config/modprobe.d
fi
if [ ! -e "/storage/.config/modprobe.d/alsa-base.conf" ]
then
  touch /storage/.config/modprobe.d/alsa-base.conf
  set-audio set "DEFAULT HDMI"
  reboot
fi
