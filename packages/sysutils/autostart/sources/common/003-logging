. /etc/profile

if [ ! -d "/var/log/retroarch" ]
then
  mkdir /var/log/retroarch
fi

if [ -d "/storage/.config/retroarch/logs" ]
then
  rm -rf /storage/.config/retroarch/logs
fi

ln -s /var/log/retroarch /storage/.config/retroarch/logs
