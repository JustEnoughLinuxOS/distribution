. /etc/profile

HOSTNAME=$(get_setting system.hostname)
hostname ${HOSTNAME}
avahi-set-host-name ${HOSTNAME}

if [ "$(get_setting wifi.enabled)" == "0" ] || [ "$1" == "disable" ]
then
  nohup wifictl disable &
elif [ "$(get_setting wifi.enabled)" == "1" ] || [ "$1" == "enable" ]
then
  nohup wifictl enable &
fi
