. /etc/profile.d/001-functions

case ${CPU_VENDOR} in
  AuthenticAMD)
    tocon "Configuring system TDP..."
    # If there is no defined overclock, make sure it's "off".
    OVERCLOCK=$(get_setting system.overclock)
    if [ -z ${OVERCLOCK} ]
    then
      set_setting system.overclock off
    fi
    /usr/bin/overclock boot
  ;;
esac
