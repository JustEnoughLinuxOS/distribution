# Minimal OS variable loading for performance
. /etc/profile.d/02-distribution

if [ ! -L "/storage/.emulationstation" ] && \
   [ -d /storage/.config/emulationstation ]
then
  ln -sf /storage/.config/emulationstation /storage/.emulationstation
fi

