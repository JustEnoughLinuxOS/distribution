. /etc/profile.d/001-functions

MYSLEEPMODE=$(get_setting system.suspendmode)
if [ -z "${MYSLEEPMODE}" ]
then
  /usr/bin/suspendmode freeze
fi

echo s2idle >/sys/power/mem_sleep

