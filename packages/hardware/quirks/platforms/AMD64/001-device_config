. /etc/profile.d/001-functions

### Set the default device configuration
cat <<EOF >/storage/.config/profile.d/001-device_config
DEVICE_BASE_TDP="15w"
DEVICE_VOLUMECTL="true"
DEVICE_BRIGHTNESS="hardware"
EOF
