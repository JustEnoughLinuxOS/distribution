cat <<EOF >/storage/.config/profile.d/001-device_config
DEVICE_BRIGHTNESS="128"
DEVICE_TEMP_SENSOR="/sys/devices/virtual/thermal/thermal_zone*/temp"

# Affinity
SLOW_CORES="taskset -c 0-3"
FAST_CORES="taskset -c 4-7"
EOF
