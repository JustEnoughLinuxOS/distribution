. /etc/profile

LED_PATH="/sys/class/leds"
LED_STATUS=$(get_setting led.color)

function led_state() {
  echo ${2} >${LED_PATH}/${1}/brightness
}

function led_off() {
    led_state green_led 0
    led_state red_led 0
}

function led_red() {
    led_off
    led_state red_led 1
}

function led_green() {
    led_off
    led_state green_led 1
}

case ${1} in
  green)
    led_green
    set_setting led.color ${1}
  ;;
  red)
    led_red
    set_setting led.color ${1}
  ;;
  off)
    led_off
    set_setting led.color ${1}
  ;;
  discharging)
    if [ -n "${LED_STATUS}" ]; then
      ledcontrol ${LED_STATUS}
    else
      led_green
    fi
  ;;
  charging)
    if [ ! "${LED_STATUS}" = "off" ]; then
      led_red
    fi
  ;;
  default)
    del_setting led.color
    led_green
  ;;
  poweroff)
    led_off
  ;;
  list)
cat <<EOF
default
off
green
red
EOF
  ;;
esac
