function get_timezone() {
        readlink -f /etc/localtime | sed 's;/usr/share/zoneinfo/;;'
}

function list_timezones() {
        cat /usr/share/zoneinfo/zone1970.tab | grep -v "^#" | awk '{ print $3"," }' | sort -u
}

case "${1}" in
  "current_timezone")
    get_timezone
  ;;
  "timezones")
    list_timezones
  ;;
esac
